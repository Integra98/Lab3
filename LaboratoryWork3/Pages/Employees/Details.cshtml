@page
@model LaboratoryWork3.Pages.Employees.DetailsModel

@{
    ViewData["Title"] = "Details";
}



<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.name)
        </dd>
    </dl>
    @if (Model.Employee.Employees != null)
    {
        <dl class="row">
            <dt class="col-sm-2">
                SubEmployees
            </dt>
            <dd class="col-sm-10">

                <ul>
                    @foreach (var emp in Model.Employee.Employees)
                    {
                        <li>@emp.name</li>
                    }
                </ul>
                
            </dd>
        </dl>
    }
        @if (Model.Employee.EmployeeTask != null)
        {
            <dl class="row">
                <dt class="col-sm-2">

                </dt>
                <dd class="col-sm-10">

                    <ul>
                        @foreach (var task in Model.Employee.EmployeeTask)
                        {
                            <li>@task.Task.name</li>
                        }
                    </ul>

                </dd>
            </dl>
        }
    </div>




<div>
    <a asp-page="./Edit" asp-route-id="@Model.Employee.id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
