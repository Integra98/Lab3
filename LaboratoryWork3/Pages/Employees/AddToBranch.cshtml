@page
@model LaboratoryWork3.Pages.Employees.AddToBranchModel
@{
    ViewData["Title"] = "AddToBranch";
}

<h1>AddToBranch</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Employee.id" />
            <div class="form-group">
                <label class="control-label"> Name</label>
                <input asp-for="Employee.name" class="form-control" />
                <span asp-validation-for="Employee.name" class="text-danger"></span>
            </div>
            <h4>Add employees</h4>
            <table>
                @foreach (var emp in Model.Branches)
                {
                    <tr>
                        <td name="empId">@emp.id</td>
                        <td>@emp.name</td>
                        <td>

                            <input type="submit" asp-page-handler="pushEmployee" asp-route-empId="@emp.id" value="+" class="btn btn-success" />

                        </td>
                    </tr>
                }
            </table>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

